root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.{md,yml,yaml,cff}]
indent_size = 2

[{.copier-answers.yml,docs/*.md}]
indent_size = 4

[*.{md,yml,yaml,cff}.jinja]
indent_size = 2

[{docs/*.md}.jinja]
indent_size = 4

[*.nf.test]
insert_final_newline = false

[Makefile]
indent_style = tab
